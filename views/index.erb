<section>
    <form class="entry" action="/" method="post">
        <label for="Name">Your name:</label><br>
        <input class="nameBox" type="text" name="name" id="Name" autocomplete="off" spellcheck="false" ><br>
        <label for="CrushName">Your crush name:</label><br>
        <input class="nameBox" type="text" name="crushName" id="CrushName" autocomplete="off" spellcheck="false" ><br>
         <% if flash[:error] %>
         <div class="notice">
            <%= flash[:error] %>
        </div>
        <% end %>
        <input class="button" type="submit" value="Spark it !">
    </form>
</section>

